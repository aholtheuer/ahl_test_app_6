<% if @user.errors.any? %>
  <h2> The following erros prevented the <%= @user.class.name.downcase %> from beign saved </h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do  |f|%>
  <p> 
    <%= f.label :username %> <br/>
    <%= f.text_field :username %>
  </p>

  <p> 
    <%= f.label :email %> <br/>
    <%= f.email_field :email, placeholder: "Enter your email"%>  
  </p>

  <p> 
  <%= f.label :password %> <br/>
  <%= f.password_field :password, placeholder: "Choose a password" %>  
  </p>

  <p>
    <%= f.submit(@user.new_record? ? "Signup" : "Update User") %>
  </p>
<% end %>