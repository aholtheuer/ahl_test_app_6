<h1>Blog Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Artilces</th>
      <th colspan = 3>Actions</th>
      <th>Joined</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= pluralize(user.articles.count, "article") %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
        <td><%= link_to "Edit", edit_user_path(user.id)%></td>
        <td><%= link_to "Delete", user_path(user.id), method: :delete, data: { confirm: "Are you sure?"}%></td>
        <td>Joined <%= time_ago_in_words(user.created_at) %></td>
        </tr>
    <% end %>
  </tbody>